= content_for :modal_header do
  User Create
= content_for :modal_body do
  #user_create_form
  = bootstrap_form_for('user', url: '/users/create', method: 'post', remote: true) do |f|
    = f.text_field :name, id: "name", label: "Name:"
    = f.text_field :email, id: "email", label: "Email:"
    = f.password :password, id: "password", label: "Password:"
    = f.password :password_confirmation, id: "password_confirmation", label: "Password Confirmation:"
    = f.submit 'Create User', class:'right'
= content_for :modal_footer do
  emrBear&trade;